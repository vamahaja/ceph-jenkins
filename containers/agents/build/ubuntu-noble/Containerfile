FROM docker.io/library/ubuntu:24.04

# Define Build Arguments for UID/GID matching
ARG USER_ID=1000
ARG GROUP_ID=1000
ARG USER_NAME=jenkins

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install all required Debian build tools and pipeline dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    sudo \
    openjdk-17-jdk-headless \
    git \
    rsync \
    build-essential \
    cmake \
    dpkg-dev \
    debhelper \
    dh-python \
    devscripts \
    equivs \
    fakeroot \
    lsb-release \
    python3-dev \
    python3-pip \
    python3-setuptools \
    gcc \
    g++ \
    make \
    cpio \
    jq \
    curl \
    reprepro \
    apt-utils \
    ca-certificates && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Remove default ubuntu user/group (exists in 23.04+)
RUN userdel -r ubuntu 2>/dev/null || true && \
    groupdel ubuntu 2>/dev/null || true

# Create the Jenkins user and group to match the host
RUN groupadd -g ${GROUP_ID} ${USER_NAME} || true && \
    useradd -u ${USER_ID} -g ${GROUP_ID} -m ${USER_NAME} && \
    echo "${USER_NAME} ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

# Set up the working directory and ownership
WORKDIR /home/${USER_NAME}
RUN chown -R ${USER_NAME}:${USER_NAME} /home/${USER_NAME}

# Switch to the non-root user
USER ${USER_NAME}

# The entrypoint remains a shell to allow the Jenkins script to run
CMD ["/bin/bash"]