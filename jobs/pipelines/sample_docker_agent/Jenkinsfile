pipeline {
    agent {
        label "ceph-build-agent"
    }
    stages {
        stage("Environment Check") {
            steps {
                script {
                    echo "Checking system identity..."
                    sh 'whoami'
                    
                    echo "Checking OS version..."
                    sh 'cat /etc/os-release'
                }
            }
        }
    }
}